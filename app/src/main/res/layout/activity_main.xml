<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ios_background_secondary"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- 顶部标题区域 -->
    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 主标题 -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信增强模块"
            android:textColor="@color/ios_text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="-0.02" />

        <!-- 副标题 -->
        <TextView
            android:id="@+id/subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="iOS风格界面 | 低占用率 | 功能自由开关"
            android:textColor="@color/ios_text_secondary"
            android:textSize="17sp"
            android:fontFamily="sans-serif"
            android:letterSpacing="-0.01" />
    </LinearLayout>

    <!-- 状态卡片 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/status_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/ios_card_background"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/ios_card_border"
        app:strokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 状态标题 -->
            <TextView
                android:id="@+id/status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前状态"
                android:textColor="@color/ios_text_secondary"
                android:textSize="13sp"
                android:fontFamily="sans-serif"
                android:letterSpacing="-0.01" />

            <!-- 状态文本 -->
            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="模块已激活"
                android:textColor="@color/ios_green"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 功能卡片容器 -->
    <LinearLayout
        android:id="@+id/functions_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_card">

        <!-- 功能卡片1：朋友圈防撤回 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/function_card_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/ios_card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/ios_card_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- 功能标题 -->
                    <TextView
                        android:id="@+id/function_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="朋友圈防撤回"
                        android:textColor="@color/ios_text_primary"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <!-- 功能状态 -->
                    <TextView
                        android:id="@+id/function_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="已启用"
                        android:textColor="@color/ios_green"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- 右箭头图标 -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="@color/ios_text_tertiary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 功能卡片2：朋友圈去广告 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/function_card_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/ios_card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/ios_card_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/function_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="朋友圈去广告"
                        android:textColor="@color/ios_text_primary"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/function_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="已启用"
                        android:textColor="@color/ios_green"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="@color/ios_text_tertiary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 功能卡片3：消息防撤回 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/function_card_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/ios_card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/ios_card_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/function_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消息防撤回"
                        android:textColor="@color/ios_text_primary"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/function_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="已启用"
                        android:textColor="@color/ios_green"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="@color/ios_text_tertiary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 功能卡片4：自动原图 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/function_card_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="@color/ios_card_background"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/ios_card_border"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/function_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自动原图"
                        android:textColor="@color/ios_text_primary"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/function_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="已禁用"
                        android:textColor="@color/ios_gray"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="@color/ios_text_tertiary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- 底部按钮区域 -->
    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 设置按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:minHeight="44dp"
            android:text="设置"
            app:backgroundTint="@color/ios_button_primary"
            app:cornerRadius="10dp"
            app:rippleColor="@color/white" />

        <!-- 测试按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/test_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:minHeight="44dp"
            android:text="测试功能"
            app:backgroundTint="@color/ios_button_secondary"
            app:cornerRadius="10dp"
            app:rippleColor="@color/white" />

        <!-- 启用/停用模块按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggle_module_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="44dp"
            android:text="停用模块"
            app:backgroundTint="@color/ios_button_danger"
            app:cornerRadius="10dp"
            app:rippleColor="@color/white" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>